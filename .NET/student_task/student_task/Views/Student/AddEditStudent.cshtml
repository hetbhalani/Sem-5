@model SimpleForm.Models.StudentModel
@{
    ViewData["Title"] = "Add / Edit Student";
}

<div class="container py-4">
    <div class="mb-3 d-flex align-items-center justify-content-between">
        <h3 class="m-0">@(Model.Enrollment == 0 ? "Add Student" : "Edit Student")</h3>
        <a asp-action="StudentList" class="btn btn-link">Back</a>
    </div>

    <form asp-action="AddEditStudent" method="post" class="card p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <input type="hidden" asp-for="Enrollment" />

        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" placeholder="Full name" />
                    <label asp-for="Name"></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="MobileNo" class="form-control" placeholder="Mobile number" />
                    <label asp-for="MobileNo"></label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Email"></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Percentage12th" type="number" step="0.01" class="form-control" placeholder="Percentage" />
                    <label asp-for="Percentage12th"></label>
                </div>
            </div>

            <div class="col-12">
                <div class="form-floating">
                    <textarea asp-for="Address" class="form-control" style="height: 100px" placeholder="Address"></textarea>
                    <label asp-for="Address"></label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="p-2 border rounded">
                    <div class="form-label mb-2">Gender</div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="true" id="genderMale">
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="false" id="genderFemale">
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="form-check">
                    <input asp-for="PlayingCricket" class="form-check-input" type="checkbox" id="playCricket" />
                    <label class="form-check-label" for="playCricket">Playing Cricket</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Password"></label>
                </div>
                <small class="text-muted">Minimum 6 characters.</small>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input asp-for="LiveinRajkot" class="form-check-input" type="checkbox" id="liveRajkot" />
                    <label class="form-check-label" for="liveRajkot">Live in Rajkot</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 justify-content-end mt-3">
            <a asp-action="StudentList" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}