@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Department Table";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Department List</h2>
        <a asp-controller="Department" asp-action="ExportToExcel"
           class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-file-earmark-excel me-2"></i>Export Excel
        </a>
        <a asp-action="DepartmentAddEdit" asp-controller="Department" class="btn btn-success">Add New Department</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td>@dr["DepartmentID"]</td>
                    <td>@dr["DepartmentName"]</td>
                    <td>@dr["Description"]</td>
                    <td>@(Convert.ToBoolean(dr["IsActive"]) ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="DepartmentAddEdit" asp-controller="Department" asp-route-DepartmentID="@dr["DepartmentID"]" class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-action="DepartmentDelete" asp-controller="Department" asp-route-DepartmentID="@dr["DepartmentID"]" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this department?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
