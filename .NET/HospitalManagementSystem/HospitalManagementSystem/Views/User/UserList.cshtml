@using System.Data
@model DataTable

@{
    ViewData["Title"] = "User Table";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>User List</h2>
        <a asp-controller="User" asp-action="ExportToExcel"
           class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-file-earmark-excel me-2"></i>Export Excel
        </a>
        <a asp-action="UserAddEdit" asp-controller="User" class="btn btn-success">Add New User</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>User Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td>@dr["UserID"]</td>
                    <td>@dr["UserName"]</td>
                    <td>@dr["MobileNo"]</td>
                    <td>@dr["Email"]</td>
                    <td>@(Convert.ToBoolean(dr["IsActive"]) ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="UserAddEdit" asp-controller="User" asp-route-UserId="@dr["UserID"]" class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-action="UserDelete" asp-controller="User" asp-route-UserID="@dr["UserID"]" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
