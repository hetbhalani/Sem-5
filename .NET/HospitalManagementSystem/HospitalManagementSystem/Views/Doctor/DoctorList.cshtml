@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Doctor List";
}

<h1>Doctor List</h1>

<!-- Button to navigate to Add/Edit page -->
<a href="@Url.Action("DoctorAddEdit", "Doctor")" class="btn btn-success mb-3">Add New Doctor</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Doctor Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Qualification</th>
            <th>Specialization</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["DoctorID"]</td>
                <td>@dr["Name"]</td>
                <td>@dr["Phone"]</td>
                <td>@dr["Email"]</td>
                <td>@dr["Qualification"]</td>
                <td>@dr["Specialization"]</td>
                <td>@dr["IsActive"]</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("DoctorAddEdit", "Doctor", new { DoctorID = dr["DoctorID"] })" class="btn btn-primary btn-sm">Edit</a>

                    <!-- Delete Button (Confirm before deleting) -->
                    <a href="@Url.Action("DoctorDelete", "Doctor", new { DoctorID = dr["DoctorID"] })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
