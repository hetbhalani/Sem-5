@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Appointment Table";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Appointment List</h2>
        <div class="d-flex gap-2">
            <a asp-controller="Appointment" asp-action="ExportToExcel" class="btn btn-success">
                Export Excel
            </a>
            <a asp-action="AppointmentAddEdit" asp-controller="Appointment" class="btn btn-primary">Add New Appointment</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Appointment ID</th>
                <th>Doctor ID</th>
                <th>Patient ID</th>
                <th>Appointment Date</th>
                <th>Status</th>
                <th>Description</th>
                <th>Remarks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td>@dr["AppointmentID"]</td>
                    <td>@dr["DoctorID"]</td>
                    <td>@dr["PatientID"]</td>
                    <td>
                        @if (DateTime.TryParse(dr["AppointmentDate"]?.ToString(), out var aptDate))
                        {
                            @aptDate.ToString("MM/dd/yyyy HH:mm")
                        }
                        else
                        {
                            @dr["AppointmentDate"]
                        }
                    </td>
                    <td>@dr["AppointmentStatus"]</td>
                    <td>@dr["Description"]</td>
                    <td>@dr["SpecialRemarks"]</td>
                    <td>
                        <a asp-action="AppointmentAddEdit" asp-controller="Appointment" asp-route-AppointmentID="@dr["AppointmentID"]" class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-action="AppointmentDelete" asp-controller="Appointment" asp-route-AppointmentID="@dr["AppointmentID"]" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
