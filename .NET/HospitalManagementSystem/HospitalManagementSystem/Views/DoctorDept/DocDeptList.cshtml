@using System.Data
@model DataTable

<h1>Doctor Department Table</h1>
<a asp-controller="DoctorDepartment" asp-action="ExportToExcel"
   class="btn btn-success btn-lg shadow-sm">
    <i class="bi bi-file-earmark-excel me-2"></i>Export Excel
</a>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>DocDept ID</th>
            <th>DoctorID</th>
            <th>DeptID</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["DoctorDepartmentID"]</td>
                <td>@dr["DoctorID"]</td>
                <td>@dr["DepartmentID"]</td>
            </tr>
        }
    </tbody>
</table>
