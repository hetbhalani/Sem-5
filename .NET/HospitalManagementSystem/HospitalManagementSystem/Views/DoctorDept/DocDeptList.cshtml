@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Doctor Department Table";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Doctor Department List</h2>
        <div class="d-flex gap-2">
            <a asp-controller="DoctorDept" asp-action="ExportToExcel" class="btn btn-success">Export Excel</a>
            <a asp-action="DocDeptAddEdit" asp-controller="DoctorDept" class="btn btn-primary">Add Mapping</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>DocDept ID</th>
                <th>DoctorID</th>
                <th>DeptID</th>
                <th>UserID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td>@dr["DoctorDepartmentID"]</td>
                    <td>@dr["DoctorID"]</td>
                    <td>@dr["DepartmentID"]</td>
                    <th>@dr["UserID"]</th>
                    <td>
                        <a asp-action="DocDeptAddEdit" asp-controller="DoctorDept" asp-route-DoctorDepartmentID="@dr["DoctorDepartmentID"]" class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-action="DocDeptDelete" asp-controller="DoctorDept" asp-route-DoctorDepartmentID="@dr["DoctorDepartmentID"]" class="btn btn-sm btn-danger" onclick="return confirm('Delete this mapping?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
