@model HospitalManagementSystem.Models.DoctorDepartmentModel

@{
    ViewData["Title"] = Model.DoctorDepartmentID == 0 ? "Add Doctor Department" : "Edit Doctor Department";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <form asp-action="DocDeptAddEdit" asp-controller="DoctorDept" method="post">
            <input type="hidden" asp-for="DoctorDepartmentID" />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DoctorID" class="form-label"></label>
                    <input asp-for="DoctorID" class="form-control" type="number" />
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DepartmentID" class="form-label"></label>
                    <input asp-for="DepartmentID" class="form-control" type="number" />
                    <span asp-validation-for="DepartmentID" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="UserID" class="form-label"></label>
                    <input asp-for="UserID" class="form-control" type="number" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="DocDeptList" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>